<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/db4?useSSL=false</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">dba1</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>

        <mapping class="by.komposter.ObjectFactory.Models" />
        <mapping class="by.komposter.ObjectFactory.Cpu" />
        <mapping class="by.komposter.ObjectFactory.NodeUser" />
        <mapping class="by.komposter.ObjectFactory.Node" />
        <mapping class="by.komposter.ObjectFactory.Departments" />
        <mapping class="by.komposter.ObjectFactory.Devices" />
        <mapping class="by.komposter.ObjectFactory.DeviceTypes" />
        <mapping class="by.komposter.ObjectFactory.Host" />
        <mapping class="by.komposter.ObjectFactory.Reason" />
        <mapping class="by.komposter.ObjectFactory.SBE" />
        <mapping class="by.komposter.ObjectFactory.Transaction" />

    </session-factory>
</hibernate-configuration>